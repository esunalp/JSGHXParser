{
  "name": "ghx-web-alpha",
  "private": true,
  "type": "module",
  "scripts": {
    "build:wasm": "cd ../ghx-engine && wasm-pack build --target web --out-dir ../web/pkg --no-typescript --no-opt -- --features \"debug_logs\"",
    "build:wasm:release": "cd ../ghx-engine && wasm-pack build --target web --out-dir ../web/pkg",
    "postbuild:wasm": "node -e \"try { require('fs').unlinkSync('./pkg/.gitignore'); } catch(e) {}\"",
    "postbuild:wasm:release": "node -e \"try { require('fs').unlinkSync('./pkg/.gitignore'); } catch(e) {}\"",
    "build": "npm run build:wasm",
    "serve": "python -m http.server --directory . --bind 0.0.0.0 8080",
    "dev": "npm run build:wasm && npm run serve"
  }
}
